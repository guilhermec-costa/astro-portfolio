---
const skills = [
  {
    icon: "🧑‍💻",
    title: "Programming Languages",
    content: "TypeScript, Java, Python (Pandas, NumPy), C++, Lua, SQL",
  },
  {
    icon: "⚙️",
    title: "Frameworks & Technologies",
    content: "React, Spring Boot, NestJS, Tailwind CSS, Selenium, Plotly",
  },
  {
    icon: "📊",
    title: "Databases",
    content: "PostgreSQL, Oracle",
  },
  {
    icon: "🔍",
    title: "Version Control",
    content: "Git",
  },
  {
    icon: "☁️",
    title: "Cloud Tools",
    content: "AWS (SQS, S3)",
  },
  {
    icon: "🤝",
    title: "Soft Skills",
    content:
      "Critical Thinking, Adaptability, Proactivity, Creativity, Communication",
  },
  {
    icon: "🌐",
    title: "Languages",
    content: "Intermediate English, Native Portuguese",
  },
];
---

<section id="skills" class="mb-12 py-12">
  <h2 class="text-3xl font-semibold mb-8">Skills</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      skills.map((skill) => (
        <div>
          <h4 class="flex items-center text-xl font-medium mb-4">
            <span class="mr-2">{skill.icon}</span> {skill.title}
          </h4>
          <p class="text-gray-500">{skill.content}</p>
        </div>
      ))
    }
  </div>
</section>
