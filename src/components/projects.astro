---
import { FolderDot } from "lucide-react";

const projects = [
  {
    name: "SLA - Real Time Monitoring Application",
    description:
      "Web Application that monitors service quality and IoT devices via interactive 3D dashboards. Simulates network improvements and provides predictive analysis.",
    technologies: "Python (Streamlit, Pandas, Plotly), MySQL",
    link: "https://github.com/guilhermec-costa/SLA-SignalMaps",
  },
  {
    name: "Github Analytics",
    description:
      "GitHub Analytics Platform is a tool to visualize and analyze metrics from GitHub repositories. It provides insights into contributions, collaborator activity, and code evolution, with interactive charts and detailed reports.",
    technologies:
      "Fastify, React, TailwindCSS, Shadcnui, TanStack Query, TanStack Table",
    link: "https://github.com/guilhermec-costa/github-analytics",
  },
  {
    name: "Tracker.nvim",
    description: `A plugin for the Vim ecosystem that tracks and generates statistical data on user operations within the text editor.
    The plugin logs various activities, providing insights into user habits and editor usage patterns. With real-time
    tracking, users can analyze their workflow efficiency, identify areas for improvement, and optimize their use of
    Vim`,
    technologies: "Lua, Linux, Neovim",
    link: "https://github.com/guilhermec-costa/Tracker.nvim",
  },
  {
    name: "Dotfiles",
    description: `description: A complete set of my dotfiles, including custom configurations for my workspace, 
    such as window manager, text editor, and Linux personalizations.`,
    technologies: "Lua, Linux",
    link: "https://github.com/guilhermec-costa/dotfiles",
  },
  {
    name: "Temporal - 2D Game",
    description: `A 2D game in C++ using the SDL2 library, implementing a Entity-Component-System (ECS) architecture. The ECS
system enabled flexible and scalable management of game entities and their behaviors, separating data and logic
for optimal performance. The project featured collision detection and a dynamic event system.`,
    technologies: "Lua, Linux, Neovim",
    link: "https://github.com/guilhermec-costa/temporal",
  },
  {
    name: "Semantic React Components",
    description: `Semantic Components is a library of reusable, semantic React components and useful hooks designed to enhance your web applications. 
    This library focuses on providing a set of well-structured components that are easy to integrate and customize, 
    promoting best practices in React development.`,
    technologies: "Lua, Linux, Neovim",
    link: "https://github.com/guilhermec-costa/semantic-react-components",
  },
  {
    name: "SteamLens",
    description: `
    Steam Lens is a project designed to analyze and track real-time and historical data from Steam games.`,
    technologies: "Spring Boot, Redis, PostgreSQL, Next.js",
    link: "https://github.com/guilhermec-costa/steam-lens",
  },
];
---

<section id="projects" class="mb-12 py-10">
  <h2 class="text-2xl font-semibold mb-6 flex items-center">
    <FolderDot className="text-gray-500 mr-2" />Projects
  </h2>

  <div class="space-y-6">
    {
      projects.map((project) => (
        <div>
          <h4 class="text-xl font-medium">{project.name}</h4>
          <p class="text-gray-500 mt-2 text-justify">{project.description}</p>
          <p class="text-gray-500 mt-1">
            <span class="text-gray-100">Technologies</span>:{" "}
            {project.technologies}
          </p>
          <a
            target="_blank"
            href={project.link}
            class="mt-4 inline-block text-blue-500 hover:underline"
          >
            Go to repo
          </a>
        </div>
      ))
    }
  </div>
</section>
