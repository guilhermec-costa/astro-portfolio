---
import ThemeToggle from "@components/themeToggle.astro";

const navItems = [
  { label: "About", href: "#about" },
  { label: "Experience", href: "#experience" },
  { label: "Projects", href: "#projects" },
  { label: "Skills", href: "#skills" },
  { label: "Education", href: "#education" },
];
---

<nav
  class="fixed top-0 w-full bg-background/80 backdrop-blur-md shadow-sm z-50"
>
  <div class="max-w-4xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="#" class="text-xl font-bold text-primary">GC</a>
      <div class="hidden md:flex space-x-4">
        {
          navItems.map(({ label, href }) => (
            <a
              href={href}
              class="text-sm font-medium text-muted-foreground hover:text-primary transition-colors"
            >
              {label}
            </a>
          ))
        }
      </div>
      <ThemeToggle />
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md hover:bg-accent/10"
        aria-label="Toggle menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {
        navItems.map(({ label, href }) => (
          <a
            href={href}
            class="block px-3 py-2 rounded-md text-base font-medium text-muted-foreground hover:text-primary hover:bg-accent/10 transition-colors"
          >
            {label}
          </a>
        ))
      }
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
